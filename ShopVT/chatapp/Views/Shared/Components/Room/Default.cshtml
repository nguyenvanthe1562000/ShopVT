    @foreach (var item in Model)
    {

        <a class="room-button" asp-controller="Home" asp-action="Chat" asp-route-id="@item.Id">@item.Name</a>

    }
    <a class="room-button" id="create-room-btn" href="#"><strong>+</strong></a>
</div> 